<Cell>
    padding: 5,0
    halign: 'left'
    canvas.before:
        Color:
            rgba: root.color
        Rectangle:
            source: root.source
            pos: self.pos
            size: self.size
    Label:
        id:cell
        markup: True
        text_size: self.size
        halign: root.halign
        valign: 'center'
        font_name: root.font_name
        font_size: root.font_size
        color: 0,0,0,1
        text:root.text
<YearBtn>
    orientation:'horizontal'
    Button:
        size_hint: [.2,.6]
        background_normal:''
        background_color: [.95,.95,.95,1]
        color: [.5,.5,.5,1]
        text: '<'
        on_release: app.changeYear(self)
    Cell:
        id: year
        size_hint:[.6,.6]
        text: root.text
        font_size: '16dp'
        halign: 'center'
    Button:
        size_hint: [.2,.6]
        background_normal:''
        background_color: [.95,.95,.95,1]
        color: [.5,.5,.5,1]
        text: '>'
        on_release: app.changeYear(self)

<AddButton>
    height: 90
    width: 595
    size_hint_y: None
    size_hint_x: None
    font_size: '28dp'
    color: .5,.5,.5,.6
    text: '+'
    background_normal: ''
    on_release:root.addProj()
    background_color: [.65, .65, .65, .3]

<PROJECT>
    height: 86
    width: 595
    size_hint_y: None
    size_hint_x: None
    orientation: 'horizontal'
    Cell:
        text:''
        size_hint: [.025, 1]
        color: root.levelColor
    Cell
        size_hint: [.03, 1]
        color: [.99,.99,.99,1]
    Button:
        id: projectBox
        background_color: [.99,.99,.99,1]
        background_normal: ''
        background_down:'src/btnPress.png'
        text_size: self.size
        valign: "center"
        color: [0,0,0,1]
        halign: 'left'

        size_hint: [.56, 1]
        on_release:  root.onClickProj(self)
        font_size: '18dp'
        text: 'PROJECT'
    Button
        id: squareBox
        background_color: [.99,.99,.99,1]
        background_normal: ''
        background_down:'src/btnPress.png'
        size_hint: [.12, 1]
        markup: True
        font_size: '15dp'
        on_release: root.UpdateClick()
        text: '[color=#606060]600 mÂ²[/color]'
    Button
        id: hoursBox
        font_size: '28dp'
        size_hint: [.16, 1]
        halign: 'center'
        font_name: 'src/Noah-Regular'
        on_release: root.onClickProjStat(self)
        color: [.05, .05, .05, 1]
        background_normal: ''
        background_color: .7,.7,.7,1
        text: '45'
    BoxLayout
        padding: [2,0]
        id: workersBox
        spacing: 2
        size_hint: [.21, 1]
        orientation: 'vertical'

<DropButton>
    font_size: '13dp'
    background_normal: ''
    background_color: [1,1,1,1]
    padding: [8,0]
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'
    valign: 'center'
    size_hint_y: None
    height: 26

<DropBox>
    padding: [12,12,12,12]
    id: dropFilter
    DropButton:
        text: root.data[0]
        on_release: app.setFilter(root, self.text)
    DropButton:
        text: root.data[1]
        on_release: app.setFilter(root, self.text)
    DropButton:
        text: root.data[2]
        on_release: app.setFilter(root, self.text)

<DropUserBox>
    padding: [12,12,12,12]
    spacing:4


<SCROLL>:
    size_hint_y: None
    size_hint_x: None
    width: 668
    height: 632
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: 'src/ScrollBack.png'
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        padding: [35,28]
        id: Scroller
        size_hint_y: None
        size_hint_x: None
        spacing: 22
        height: self.minimum_height
        width: self.minimum_width
        orientation: 'vertical'


<SCREEN>
    orientation: 'vertical'
    padding: [0, 0, 0, 12]
    Cell:
        size_hint:[1,.01]
        color:[.7,.7,.7,.5]
    Cell:
        size_hint: [1,.10]
        padding: 34,6
        text: 'LPTV [color=#656565]DESIGN[/color]'
        font_name: 'src/futural'
        font_size: '25dp'
    BoxLayout:
        id: Top
        padding: [34,10,36,10]
        orientation: 'horizontal'
        size_hint_y: None
        size_hint_x: None
        width: 668
        height: 28
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
<StageSelect>
    orientation:'horizontal'
    size_hint: [1,.12]
    spacing: 10
    padding: [0,4]
    Cell:
        size_hint:[.6,1]
        id: label
        color: [.9,.9,.9,1]
        font_size: '16dp'
        text: root.text
    MyInput:
        id: input
        background_color:[.95,.95,.95,1]
        size_hint:[.4,1]
        text: root.hint
<Input@TextInput>
    background_color: [.9,.9,.9,1]
    background_normal: ''
    halign: 'center'
    valign: 'center'
    text_size: self.size
    hint_text_color: [0,0,0,.3]
    font_size: '18dp'
    background_active: 'src/btnPress.png'
<UserRow>
    orientation: 'horizontal'
    size_hint: [1,.08]
    spacing:8
    Cell:
        id: ex
        size_hint:[.015,1]
        color: root.color
    Input:
        id: name
        halign: 'left'
        font_size: '18dp'
        text: root.text
        size_hint: [.6,1]
    Input:
        id: red
        hint_text: 'R'
        size_hint: [.1,1]
        on_text: root.colorChange(self)
    Input:
        id: green
        hint_text: 'G'
        size_hint: [.1,1]
        on_text: root.colorChange(self)
    Input:
        id: blue
        hint_text: 'B'
        size_hint: [.1,1]
        on_text: root.colorChange(self)


<AddProjScreen>
    BoxLayout:
        id: general
        orientation: 'vertical'
        BoxLayout:
            id: box
            orientation:'vertical'
            padding: [100,80,100,10]
            spacing: 8

<AddUserScreen>
    BoxLayout:
        id: general
        orientation: 'vertical'
        BoxLayout:
            id: box
            orientation:'vertical'
            padding: [100,80,100,10]
            spacing: 8
<MyInput>
    canvas.after:
        Color:
            rgba: root.bcolor
        Line:
            width: 1.2
            points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]
        Line:
            width: 1.2
            points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0], self.pos[1]
        Line:
            width: 1.2
            points: self.pos[0], self.pos[1],self.pos[0], self.pos[1]+self.size[1]
        Line:
            width: 1.2
            points: self.pos[0]+self.size[0], self.pos[1],self.pos[0]+self.size[0], self.pos[1]+self.size[1]
    background_normal:''
    background_active:'src/btnPress.png'
    font_size: '19dp'
    text_size: self.size
    hint_text: ''
    hint_text_color:[0,0,0,.2]

    foreground_color: [0,0,0,1]
    valign: 'center'
    halign: 'center'
    size_hint:[.4,1]
